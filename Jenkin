pipeline {
environment {
registry = "reach2johnny/webgoat"
dockerImage = ''}
agent any

stages {
stage('Cloning Git') {
 steps {
 git 'https://github.com/johnsimon007/WebGoat'
 }
 }

stage('Building image') {
 steps{
 script {
 dockerImage = docker.build registry + ":$BUILD_NUMBER" 
 }}}
stage('Container Security Scan') {
 steps {

 sh 'curl -s https://ci-tools.anchore.io/inline_scan-v0.6.0 | bash -s -- -r reach2johnny/demo:31'
}
}
}}
