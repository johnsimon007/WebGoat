pipeline {
environment {
registry = "web/demo"

dockerImage = ''}
agent any
stages {
stage('Cloning Git') {
 steps {
 git 'https://github.com/johnsimon007/WebGoat.git'
 }
 }
stage('Building image') {
 steps{
 script {
 dockerImage = docker.build registry + ":$BUILD_NUMBER" -f https://github.com/johnsimon007/WebGoat/blob/develop/docker/Dockerfile
 }
 }
 }
stage('Container Security Scan') {
 steps {

 sh 'curl -s https://ci-tools.anchore.io/inline_scan-v0.6.0 | bash -s -- -r reach2johnny/demo:31'


}}
