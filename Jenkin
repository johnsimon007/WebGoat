pipeline{
    agent any
    
    environment {
        IMAGE_NAME = 'btodhunter/anchore-ci-demo'
        IMAGE_TAG = 'jenkins'
        registry = "reach2johnny/webgoat"
        registryCredential = 'dockerhub'
    }
    stages {
        stage('Build Image') {
            steps {
                sh 'docker build -f Dockerfile -t ${IMAGE_NAME}:ci https://raw.githubusercontent.com/johnsimon007/WebGoat/develop/docker/Dockerfile'
            }
        }
       stage('Push Image') {
            steps {
                sh 'docker.withRegistry("https://hub.docker.com/", registryCredential)'{
                    sh 'docker tag ${IMAGE_NAME}:ci ${IMAGE_NAME}:${IMAGE_TAG}'
                    sh 'docker push ${IMAGE_NAME}:${IMAGE_TAG}'
                }
            }
        }
        stage('Scan') {
            steps {        
                sh 'curl -s https://ci-tools.anchore.io/inline_scan-v0.6.0 | bash -s -- -r ${IMAGE_NAME}:ci'
            }
        }
        
    }
}
