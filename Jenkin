pipeline{
    agent any
    
    environment {
        IMAGE_NAME = 'reach2johnny/btodhunter'
        IMAGE_TAG = 'jenkins'
        registry = "reach2johnny/btodhunter"
        registryCredential = 'dockerhub'
    }
    stages {
        stage('Build Image') {
            steps {
                sh 'docker build -f Dockerfile -t ${IMAGE_NAME}:ci https://raw.githubusercontent.com/johnsimon007/WebGoat/develop/docker/Dockerfile'
            }
        }
        
      stage('Scan') {
            steps {           
          sh '''
          pip install anchorecli
source ~/.profile
ANCHORE_CLI_URL=http://localhost:8228/v1
ANCHORE_CLI_USER=admin
ANCHORE_CLI_PASS=foobar
export ANCHORE_CLI_URL
export ANCHORE_CLI_USER
export ANCHORE_CLI_PASS

             
               echo "docker.io/reach2johnny/btodhunter" > anchore_images
               '''
 anchore name: 'anchore_images'}
       
               
                
            
        }
        
     stage('Push Image') {
            steps {
                sh 'docker push reach2johnny/btodhunter'
            }
            }
            
        
    }
}
